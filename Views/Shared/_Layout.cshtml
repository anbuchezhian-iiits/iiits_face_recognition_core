<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Face Recognition Web App</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,300,0,0&icon_names=dock_to_right" />

    <!-- Link to External CSS File -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Google Fonts: Open Sans -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white" id="sidebar-wrapper">
            <a href="/Home/Index" style="text-decoration: none; color: inherit;">
                <div class="sidebar-heading text-center py-4">Face Recognition Web App</div>
            </a>
            <div class="list-group list-group-flush">
                <a href="#registrationSubmenu" data-bs-toggle="collapse" class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center" id="registrationToggle">
                    <span class="material-icons me-2">how_to_reg</span> Registration
                    <span id="toggle-icon" class="material-icons ms-auto">expand_more</span>
                </a>
                <div class="collapse" id="registrationSubmenu">
                    <a href="/Registration/New" class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center">
                        <span class="material-icons me-2">add</span> New Registration
                    </a>
                    <a href="/Registration/List" class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center">
                        <span class="material-icons me-2">list</span> Registered List
                    </a>
                </div>
                <a href="/Recognize/Recognize" class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center">
                    <span class="material-icons me-2">search</span> Recognize
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="container-fluid">
            <span class="custom-hover material-symbols-rounded" id="menu-toggle">dock_to_right</span>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();

            // Toggle the sidebar visibility
            document.getElementById("wrapper").classList.toggle("toggled");
            document.getElementById("page-content-wrapper").classList.toggle("toggled");

            // Toggle the active state for the menu button
            this.classList.toggle("active"); // Adds or removes 'active' class on click

            // Ensure that the 'inactive' class is applied when the sidebar is collapsed
            if (!document.getElementById("wrapper").classList.contains("toggled")) {
                this.classList.add("inactive"); // Adds 'inactive' class when sidebar is collapsed
            } else {
                this.classList.remove("inactive"); // Removes 'inactive' class when sidebar is active
            }
        });

        // Toggle Registration Submenu with Expand/Collapse Arrows
        const registrationToggle = document.getElementById("registrationToggle");
        const toggleIcon = document.getElementById("toggle-icon");
        const registrationSubmenu = document.getElementById("registrationSubmenu");

        registrationToggle.addEventListener("click", function () {
            // Toggle submenu visibility
            registrationSubmenu.classList.toggle("collapse");

            // Change the icon based on the submenu state
            if (registrationSubmenu.classList.contains("collapse")) {
                toggleIcon.textContent = "expand_more"; // Down arrow
            } else {
                toggleIcon.textContent = "expand_less"; // Up arrow
            }
        });
    </script>
</body>
</html>
